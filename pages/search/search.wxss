/* pages/search/search.wxss */
@import "../../iconfont.wxss";
.search{
    background-color: #2aa515;
    padding: 20rpx 40rpx;
}
.search .ser{
    text-align: left;
    background-color: #fff;
    border-radius: 10rpx;
    line-height: 62rpx;
    padding-left:50rpx
}
.search .ser input{
    font-size: 24rpx;
    height: 62rpx;
}
.search .ser text{
    font-size: 24rpx;
    color:#555;
    line-height: 20rpx;
}
.color{
    font-size: 24rpx;
}
.main{
    padding: 36rpx;
}
.main .img{
    width: 200rpx;
    float: left;
}
.main .mo-name{
    overflow: hidden;
    padding:30rpx 0;
    border-bottom: 1px solid #ddd;
}
.main .txt{
    float: left;
    width: 450rpx;
    margin-left: 20rpx;
}
.main .img image{
    width: 100%;
    height: 284rpx;
}
.main .txt .title{
    font-size: 36rpx;
    color: #333;
    line-height: 50rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.main .detail{
    font-size:24rpx;
    color: #666;
    line-height: 30rpx;
}
.main .stars{
    overflow: hidden;
}
.main .score{
    font-size: 24rpx;
    display: inline-block;
    margin-left: 20rpx;
}
.main .stars image{
    width: 20rpx;
    height: 20rpx;
    line-height: 28rpx;
}
.main .stars view{
    float: left;
    vertical-align: bottom;
    line-height: 36rpx;
}
.main .mov{
    overflow: hidden;
    line-height: 34rpx;
}
.main .mov>view{
    float: left;
}
.main .detail{
    font-size: 24rpx;
    color: #999;
}